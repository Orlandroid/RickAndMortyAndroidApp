<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PaggingExample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="card_style">
        <item name="android:layout_marginStart">@dimen/card_marginStart</item>
        <item name="android:layout_marginTop">@dimen/card_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/card_marginStart</item>
        <item name="android:layout_marginBottom">@dimen/card_marginStart</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="useCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="textos_menu">
        <item name="android:gravity">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    
    <style name="AppTheme.PopupOverlay.toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorControlNormal">@color/always_white</item>
        <item name="iconTint">@color/always_white</item>
        <item name="android:textColorPrimary">@color/always_white</item>
        <item name="colorAccent">@color/always_white</item>
        <item name="android:textColorHint">@color/always_white</item>
        <item name="android:tint">@color/always_white</item>
    </style>
</resources>